// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Counts {
  id         Int         @id @default(autoincrement())
  name_id    String      @unique
  count      Int
  accessLogs AccessLog[] // Mối quan hệ 1-n với AccessLog
}

model AccessLog {
  id           Int      @id @default(autoincrement())
  ip_address   String
  last_accessed DateTime @default(now())
  countId      Int
  Counts       Counts   @relation(fields: [countId], references: [id]) // Khóa ngoại liên kết với Counts.id

  @@index([countId]) // Chỉ mục cho countId
}
