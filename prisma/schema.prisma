// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Counts {
  id         Int         @id @default(autoincrement()) // Tự động tăng
  name_id    String      @unique // name_id là duy nhất
  count      Int
  accessLogs AccessLog[] @relation("AccessLogCounts") // Quan hệ với AccessLog
}

model AccessLog {
  id           Int      @id @default(autoincrement())  // Tự động tăng
  ip_address   String   // Địa chỉ IP
  last_accessed DateTime @default(now()) // Thời gian truy cập
  countId      Int
  Counts       Counts   @relation("AccessLogCounts", fields: [countId], references: [id]) // Khóa ngoại trỏ về bảng Counts

  @@index([countId]) // Tạo chỉ mục cho countId
}
